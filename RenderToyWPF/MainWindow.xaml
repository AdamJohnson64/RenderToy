<Window x:Class="RenderToy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RenderToy"
        mc:Ignorable="d"
        Title="RenderToy Experiment" Height="768" Width="1024">
    <TabControl>
        <TabItem Header="Single View">
            <local:RenderViewport/>
        </TabItem>
        <TabItem Header="Quad View">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <!-- XY Viewport (Front) -->
                <local:RenderViewport x:Name="ViewMain" Grid.Row="0" Grid.Column="0"/>
                <!-- XZ Viewport (Top) -->
                <local:RenderViewport Grid.Row="0" Grid.Column="1" DrawExtra="{Binding ElementName=ViewMain}"/>
                <!-- YZ Viewport (Side) -->
                <local:RenderViewport Grid.Row="1" Grid.Column="0"/>
                <!-- Rotate Viewport -->
                <local:RenderViewport Grid.Row="1" Grid.Column="1"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
